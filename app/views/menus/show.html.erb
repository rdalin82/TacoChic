<div class="container-fluid">
  <h1><%= @menu.meal %> Menu</h1>
  <h3>Hours: <%= time_display(@menu) %> </h3>
  <h3>
  <%= link_to "New Item", new_menu_item_path(@menu) %> |
    <%= link_to "New Category", new_menu_category_path(@menu) %>
  </h3>
  <h2>Menu</h2>
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-default">
          <% @menu.items.each do |item| %>
          <div class="panel-heading">
            <h5><%=item.name %> | <%= price_of(item) %> | <%= item.category.name %> </h5>
            <h6><%= link_to "Show", menu_item_path(@menu, item) %> |
              <%= link_to "Edit", edit_menu_item_path(@menu, item) %> |
              <%= link_to "Delete", [@menu, item], method: :delete,
                  data: {confirm: "Are you sure you want to delete this item"} %>
            </h6>
          </div>
          <div class="panel-body">
            <h5><%= item.description %></h4>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-3">
        <h2>Categories</h2>
        <% @menu.categories.each do |c| %>
        <h4><%= link_to c.name, menu_category_path(@menu, c) %></h4>
        <% end %>
        <%= image_tag "tacos.jpg" %>
      </div>
    </div>
</div>
