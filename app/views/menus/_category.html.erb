<h5><%= category.name %></h5>
<div class="panel panel-default">
  <% category.items.each do |item| %>
  <div class="panel-heading">
    <%=item.name %>
    | <%= price_of(item) %>
    | <%= item.category.name %>
    <%= link_to "Show", menu_item_path(@menu, item) %> |
      <%= link_to "Edit", edit_menu_item_path(@menu, item) %> |
      <%= link_to "Delete", [@menu, item], method: :delete,
          data: {confirm: "Are you sure you want to delete this item"} %>
  </div>
  <div class="panel-body">
    Description: <%= item.description %>
  </div>
  <% end %>
</div>
