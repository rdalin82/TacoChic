<div class="container-fluid">
  <h1>Menu</h1>
  <h3><%= link_to "New", new_menu_path %></h3>
  <% @menus.each do |menu| %>
  <div class="menu">
    <h2><%= link_to menu.meal, menu %></h2>
    <h3>Hours: <%= time_display(menu) %></h3>
    <h3><%= link_to "Edit", edit_menu_path(menu) %>  |
       <%= link_to "Delete", menu, method: :delete,
           data: {confirm: "Are you sure you want to delete this menu"}%>
    </h3>
  </div>
  <% end %>
</div>
