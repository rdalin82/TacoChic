<div class="col-md-6">
  <%= simple_form_for [menu, item] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category_id, collection: menu.categories %>
    <%= f.input :price, input_html: {value: number_with_precision(f.object.price, precision: 2) } %>
    <%= f.button :submit %>
  <% end %>
</div>
