<h5><%= category.name %></h5>
<div class="panel panel-default">
  <% category.items.each do |item| %>
  <div class="panel-heading">
    <button type="button" class="btn btn-xs btn-success menu-item" data-item-id=<%="#{item.id}" %> >
      <span class="glyphicon glyphicon-plus"></span>
    </button>
    <%=item.name %>
    | <%= price_of(item) %>
    | <%= item.category.name %>
    <% admin_only do %>
    <%= link_to "Show", menu_item_path(@menu, item) %> |
      <%= link_to "Edit", edit_menu_item_path(@menu, item) %> |
      <%= link_to "Delete", [@menu, item], method: :delete,
          data: {confirm: "Are you sure you want to delete this item"} %>
    <% end %>
  </div>
  <div class="panel-body">
    Description: <%= item.description %>
  </div>
  <% end %>
</div>
